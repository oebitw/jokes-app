<!DOCTYPE html>
<html lang="en">
<head>
    <title>Home Page</title>
    <%- include('../layout/head') %> 


</head>
<body>

    <header>

        <%- include('../layout/header') %> 

    </header>

    <main>
        <div class="wrap">
            <% data.forEach(e=>{%>
                <div class="container">
                    <h3> Joke Number:<%= e.id %> </h3>
                    <h3><%= e.type %> </h3>
                    <h3> <%= e.setup %> </h3>
                    <h3><%= e.punchline %> </h3>
                    
                    <form action="/addFav" method="post">
                        <input type="hidden" name="id" value="<%= e.id %>">
                        <input type="hidden" name="type" value="<%= e.type %>">
                        <input type="hidden" name="setup" value="<%= e.setup %>">
                        <input type="hidden" name="punchline" value="<%= e.punchline %>">
                        <button type="submit">Add to Fav</button>
                        
    
                    </form>
                </div>



            <% }) %> 
        </div>

    </main>

    <footer>
        <%- include('../layout/footer') %> 
    </footer>
    
</body>
</html>